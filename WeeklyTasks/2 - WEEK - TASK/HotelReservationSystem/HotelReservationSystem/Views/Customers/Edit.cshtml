@model HotelReservationSystem.Models.Customer

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5">
    <h1 class="page-title mb-4">Edit Customer</h1>
    <div class="container mt-4 w-100">
        <div class="text-secondary rounded p-4 shadow-sm">
            <h2 class="font-weight-bold">Edit Customer Details</h2>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="CustomerId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control border-secondary" placeholder="Enter customer name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="phoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="phoneNumber" class="form-control border-secondary" placeholder="Enter phone number" />
                    <span asp-validation-for="phoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="email" class="form-label">Email</label>
                    <input asp-for="email" class="form-control border-secondary" placeholder="Enter email address" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="DateOfBirth" class="form-control border-secondary" type="date" min="1900-01-01" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="City" class="form-label">City</label>
                    <input asp-for="City" class="form-control border-secondary" list="cities" placeholder="Enter city" />
                    <datalist id="cities">
                        <!-- Options will be populated by JavaScript -->
                    </datalist>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ZipCode" class="form-label">ZIP Code</label>
                    <input asp-for="ZipCode" class="form-control border-secondary" placeholder="Enter ZIP code" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="State" class="form-label">State</label>
                    <input asp-for="State" class="form-control border-secondary" list="states" placeholder="Enter state" />
                    <datalist id="states">
                        <!-- Options will be populated by JavaScript -->
                    </datalist>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Country" class="form-label">Country</label>
                    <input asp-for="Country" class="form-control border-secondary" list="countries" placeholder="Enter country" />
                    <datalist id="countries">
                        <!-- Options will be populated by JavaScript -->
                    </datalist>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <input type="submit" value="Save" class="btn btn-primary rounded px-4 py-2" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-link">Back to List</a>
    </div>
</div?
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
